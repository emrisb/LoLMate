<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_marginTop="40dp"
    card:cardCornerRadius="2dp"
    card:contentPadding="5dp"
    card:elevation="2dp">

    <LinearLayout
        android:id="@+id/card_view_main_content"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view_ivProfile"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@drawable/sivir"
            app:civ_border_color="#000000"
            app:civ_border_width="2dp" />

        <LinearLayout
            android:id="@+id/card_view_ll_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/card_view_txt_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Win" />

            <TextView
                android:id="@+id/card_view_txt_degree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="degree" />

            <TextView
                android:id="@+id/card_view_txt_time_ago"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="55 min ago" />


        </LinearLayout>

        <RelativeLayout
            android:id="@+id/card_view_rl_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp">

            <TextView
                android:id="@+id/card_view_txt_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15" />

            <ImageView
                android:id="@+id/card_view_iv_score"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_toRightOf="@id/card_view_txt_score" />

            <TextView
                android:id="@+id/card_view_txt_creep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_view_txt_score"
                android:text="15" />

            <ImageView
                android:id="@+id/card_view_iv_creep"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@+id/card_view_txt_score"
                android:layout_toRightOf="@id/card_view_txt_creep" />

            <TextView
                android:id="@+id/card_view_txt_kda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_view_txt_creep"
                android:text="15" />

            <ImageView
                android:id="@+id/card_view_iv_kda"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@+id/card_view_txt_creep"
                android:layout_toRightOf="@id/card_view_txt_kda" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/card_view_rl_items"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp">

            <ImageView
                android:id="@+id/iv_item1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/item" />

            <ImageView
                android:id="@+id/iv_item2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="1dp"
                android:layout_toRightOf="@id/iv_item1"
                android:src="@drawable/item" />

            <ImageView
                android:id="@+id/iv_item3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="1dp"
                android:layout_toRightOf="@id/iv_item2"
                android:src="@drawable/item" />

            <ImageView
                android:id="@+id/iv_item4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="1dp"
                android:layout_toRightOf="@id/iv_item3"
                android:src="@drawable/item" />

            <ImageView
                android:id="@+id/iv_item5"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@id/iv_item1"
                android:layout_marginTop="1dp"
                android:src="@drawable/item" />

            <ImageView
                android:id="@+id/iv_item6"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@id/iv_item1"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="1dp"
                android:layout_toRightOf="@id/iv_item5"
                android:src="@drawable/item" />

            <ImageView
                android:id="@+id/iv_item7"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@id/iv_item1"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="1dp"
                android:layout_toRightOf="@id/iv_item6"
                android:src="@drawable/item" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_total_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="38m 35s" />

            <TextView
                android:id="@+id/txt_game_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15.10.2017" />

            <TextView
                android:id="@+id/txt_placed_totem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4 placed totem" />

        </LinearLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>